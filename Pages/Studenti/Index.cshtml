@page
@model Kovacs_Gyongyi_Elisabeta_Proiect.Pages.Studenti.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Data_nasterii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Oras)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Specializare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Forma_de_invatamant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Ciclu)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_nasterii)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oras)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specializare.Nume_Specializare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Forma_de_invatamant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciclu.Nume_Ciclu)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
